---
import { getCollection } from "astro:content";
import Link from "./Link.astro";
const allProjects = await getCollection("project");
---

<section class="my-10">
  <h2 class="font-display text-2xl font-semibold my-5">Projets</h2>
  {
    allProjects.map((data) => {
      return (
        <>
          <article class="flex flex-col gap-1.5">
            <Link href={data.data.project_link}>{data.data.title}</Link>
            <p class="text-md font-normal text-balance">{data.body}</p>
            <Link href={data.data.repository_link}>Lien vers le dépôt</Link>
          </article>
        </>
      );
    })
  }
</section>
