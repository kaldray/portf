---
import Link from "./Link.astro";
import Home from "./svg/DashiconsAdminHome.astro";
import Pdf from "./svg/Pdf.astro";
---

<nav class="my-5">
  <ul class="flex flex-row gap-5">
    <li
      class="underline underline-offset-2 decoration-2 decoration-dashed inline-flex items-center gap-1"
    >
      <Home /> Accueil
    </li>
    <li>
      <Link href="/files/CVAlternanceFSIUT.pdf"
        >Télécharger mon CV
        <Pdf
          slot="icon"
          fill="dark:fill-white"
          class="motion-safe:group-hover:animate-bounce"
        />
      </Link>
    </li>
  </ul>
</nav>
